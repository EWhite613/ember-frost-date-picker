<h2> range picker </h2>
<div class='row'>
  <div class='item'>
    <h3>Controller</h3>
    {{code-snippet name="range_controller.js"}}
  </div>
  <div class='item column'>
    <div class='item'>
      <h3>Template</h3>
      {{code-snippet name="range_template.hbs"}}
    </div>
    <div class='item'>
      <h3>Rendered</h3>
      <!-- BEGIN-SNIPPET range_template -->
      <div class='row'>
        <div class='item'>
          {{frost-range-picker
            onSelect=(action 'onSelect')
            onError=(action 'onError')
            isVertical=false
            startDate='2012-12-12'
            startTime='00:00:01'
            startTitle= 'Custom Start'
            endDate='2017-01-01'
            endTime='00:00:00'
            endTitle='Custom End'
            separator=(component 'my-separator')
            validator=(action 'myCustomValidator')
          }}
        </div>
      </div>
      <!-- END-SNIPPET -->

      <div class='row'>
        <div class='item'>
          <h3>Custom Validation Test</h3>
          {{frost-toggle
            value=isInverted
            onClick=(mut isInverted)
          }}
          <p>
            For demo purposes -
              If state is on, it will use custom validator i.e <code>(action 'myCustomValidator')</code>
              <br/>
              Otherwise it will use the normal validation
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
