<h2>Ember Frost Date Picker</h2>
<div class='row'>
  <div class='item'>
    <h3>Controller</h3>
    {{code-snippet name="controller.js"}}
  </div>
  <div class='item column'>
    <div class='item'>
      <h3>Template</h3>
      {{code-snippet name="template.hbs"}}
    </div>
    <div class='item'>
      <div class='row'>
        <!-- BEGIN-SNIPPET template -->
        <div class='item'>
          {{frost-date-picker
            onSelect=(action 'onSelect')
            onOpen=(action 'onOpen')
            onClose=(action 'onClose')
            onDraw=(action 'onDraw')
            onError=(action 'onError')
          }}
        </div>
        <div class='item'>
          <p>Current value is <code>{{value}}</code></p>
        </div>
        <!-- END-SNIPPET -->
      </div>
    </div>
  </div>
</div>

